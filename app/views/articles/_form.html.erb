<%= form_with model: article do |form| %>

<div>
  <%= form.label :title %><br>
  <%= form.text_field :title %><br>
  <% article.errors.full_messages_for(:title).each do |m|%>
    <div> <%= m %> </div>
  <% end %>
</div>

<div>
  <%= form.label :body%><br>
  <%= form.text_area :body%>
  <% article.errors.full_messages_for(:body).each do |m|%>
    <div> <%= m %> </div>
  <% end %>
</div>

<div>
  <%= form.submit%>
</div>

<% end %>

<div>
 <%= link_to "Home", root_path%>
</div>