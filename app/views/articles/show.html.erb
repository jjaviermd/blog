<h1><%= @article.title%></h1>

<p><%= @article.body%></p>


<ul>
  <li><%= link_to "Home", root_path%></li>
  <li><%= link_to "Edit #{@article.title}", edit_article_path(@article)%></li>
  <li><%= link_to "Erase #{@article.title}", article_path(@article),
    data: {
     turbo_method: :delete,
     turbo_confirm: "Are you sure?"
    } %> </li>
</ul>

<h2>comments</h2>
<%= render @article.comments %>



